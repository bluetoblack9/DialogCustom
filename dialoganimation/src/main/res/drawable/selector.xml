<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <solid android:color="#ffffff" /><!-- 背景填充颜色 -->
            <stroke
                android:width="2dp"
                android:color="@color/green" /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="16dp" /><!-- 边角圆弧的半径 -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>

</selector>